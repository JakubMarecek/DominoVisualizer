        <Style TargetType="CustomControlsDV:BlurHost">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CustomControlsDV:BlurHost">
                        <Grid ClipToBounds="True">
                            <!-- Blur layer beneath the hosted element (ContentPresenter) -->
                            <Border x:Name="PART_BlurDecorator"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}" Margin="-10" />
                            <ContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
